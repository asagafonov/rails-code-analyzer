= simple_form_for(repository) do |f|
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  - if @repositories_list
    = f.input :full_name, as: :select, collection: @repositories_list.map(&:full_name)
  - else
    p = t('views.repositories.list_unavailable')

  = f.submit t('views.repositories.form.submit_new'), class: 'btn btn-primary mt-4'
